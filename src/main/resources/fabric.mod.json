  ],
  "contact": {
    "homepage": "${curseforge_url}",
    "sources": "${github_url}",
    "issues": "${github_url}/issues",
    "modrinth": "${modrinth_url}"
  },

  "license": "Apache-2.0",
  "icon": "assets/annotateddi/logo.png",

